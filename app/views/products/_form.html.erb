<%= form_for(@product, remote: true) do |f| %>
	<div class="form-group">
		<%= f.label :name, "Name" %>
		<%= f.text_field :name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<%= f.label :price, "Price" %>
		<%= f.text_field :price, value: 1, class: 'form-control', min: 1 %>
	</div>

	<%= f.submit "Save", class: 'btn btn-success' %>
<% end %>
